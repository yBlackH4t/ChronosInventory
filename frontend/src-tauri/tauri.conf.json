{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Chronos Inventory",
    "version": "1.2.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "sidecar": true,
        "scope": []
      },
      "process": {
        "relaunch": true
      }
    },
    "windows": [
      {
        "title": "Chronos Inventory",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/yBlackH4t/ChronosInventory/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYzMTM5RjE3MUFCRTJENjEKUldSaExiNGFGNThUWTlMYXY1QVhLMnR3YW5ZMk1FOHpsNTBYUEZsUklkd05LOVdaeGVhYll6VzEK"
    },
    "bundle": {
      "active": true,
      "identifier": "com.yblackh4t.chronosinventory",
      "targets": [
        "msi",
        "updater"
      ],
      "resources": [
        "webview2/**"
      ],
      "icon": [
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "windows": {
        "webviewFixedRuntimePath": "webview2"
      },
      "externalBin": [
        "bin/estoque_backend"
      ]
    }
  }
}
